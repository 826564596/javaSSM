/*顶部照片  */
.swiper {
  position: relative;
  width: auto;
  height: 355rpx;
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 10rpx 10rpx 0 0;
  overflow: hidden;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.swiper swiper {
  height: 100%;
  width: 100%;
}

.swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  bottom: 0;
}

.swiper .wx-swiper-dot {
  width: 16rpx;
  display: inline-flex;
  height: 12rpx;
}

.swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 20rpx;
}

.swiper .wx-swiper-dot-active {
  width: 28rpx;
}

.swiper .wx-swiper-dot-active::before {
  background: #fff;
}

